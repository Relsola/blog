{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@theme/*": [".vitepress/theme/*"],
      "@/*": ["src/*"],
      "$/*": ["examples/*"],
      "@utils*": ["src/utils/*"],
      "@hooks*": ["src/hooks/*"]
    }
  },
  "include": ["env.d.ts", "src/**/*", ".vitepress/**/*"]
}
